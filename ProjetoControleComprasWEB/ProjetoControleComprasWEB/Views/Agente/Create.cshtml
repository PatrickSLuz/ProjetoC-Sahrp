@model Domain.Agente

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Agente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeAgente" class="control-label"></label>
                <input asp-for="NomeAgente" class="form-control" />
                <span asp-validation-for="NomeAgente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cpf" class="control-label"></label>
                <input asp-for="Cpf" class="form-control" />
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cargo"></label>
                <select class="custom-select" asp-items="@ViewBag.Cargos" name="drpCargo">
                    <option>Selecione...</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Setor"></label>
                <select class="custom-select" asp-items="@ViewBag.Setores" name="drpSetor">
                    <option>Selecione...</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

