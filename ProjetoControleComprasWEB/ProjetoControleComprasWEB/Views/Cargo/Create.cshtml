@model Domain.Cargo

@{
    ViewData["Title"] = "Novo Cargo";
}

<h2>Novo Cargo</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeCargo" class="control-label"></label>
                <input asp-for="NomeCargo" class="form-control" />
                <span asp-validation-for="NomeCargo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
